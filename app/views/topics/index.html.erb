<h1>Listing Proposals</h1>
<%= link_to 'Submit New Proposal', new_topic_path %>
<%if !current_user.admin%>
  <table style= "width:80%">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Proposal</th>
    <th colspan="3"></th>
  </tr>

  <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.name %></td>
      <td><%= topic.title %></td>
      <td><%= topic.proposal %></td>
      <td><%= link_to 'Show', topic_path(topic) %></td>
      <td><%= link_to 'Edit', edit_topic_path(topic) %></td>

    </tr>
    <%end%>
  </table>
  <%else%>
    <table style= "width:80%"">
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Proposal</th>
      <th colspan="3"></th>
    </tr>

    <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.name %></td>
      <td><%= topic.title %></td>
      <td><%= topic.proposal %></td>
      <td><%= link_to 'Show', topic_path(topic) %></td>
      <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
      <td><%= link_to 'Destroy', topic_path(topic),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <%end%>
   </table>
<%end%>
